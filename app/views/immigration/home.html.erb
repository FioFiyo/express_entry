<div class ="language_dropdown">
    <%= select_tag :language, options_from_collection_for_select(@languages, "id", "language"), prompt: "Select your first language"%>
  <div>

    <div class="language_dropdown">
      <%= select_tag "language_test", options_from_collection_for_select(@languages, "id", "language"), prompt: "Select your first language"%>
       
      <select class="test_options">
      <option> Select test </option>
        <% @language_tests.each do |test| %>
          <option value="<%= test.id %>" data-lang="<%= test.language %>" class="options_eval"><%= test.test_evaluation %> </option>
        <% end %>
      </select>
    </div>
  </div>
</div> 
  
