<!DOCTYPE html>
<html>
  <head>
    <title>ExpressEntry</title>
    <%= csrf_meta_tags %>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://www.atlasestateagents.co.uk/javascript/tether.min.js"></script><!-- Tether for Bootstrap --> 
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    
  </head>

  <body>
    <div class="main-nav">
      <div class="row">
        <div class="col-lg-12">
          <%= render 'layouts/menu' %>
          <%= yield %>
          <%= render 'layouts/footer' %>
        </div>
      </div>
    </div>
    <section id="video-block" class="fullscreen">
      <!-- Adjust video height and width -->
      <script>
        var w = $(window).width(), h = $(window).height()  
        $('#video-block video').css({height: ''+h+'',width: ''+w+''});
        $(window).resize(function(){
          var w = $(window).width(), h = $(window).height()  
          $('#video-block video').css({height: ''+h+'',width: ''+w+''});
        });
      </script>
      <!-- Embed Video as Background-->
      <div style="width:initial;" >
        <video autoplay loop id="video-background" muted style="z-index: -1;" >
          <source src="/intro-video2.mp4">
        </video>
      </div>
    </section>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </body>
</html>
