<% if @candidate.errors.any? %>
  <div>
    <%= pluralize(@candidate.errors.count, "error") %> prevented this page from being submitted:
    <ul>
      <% @candidate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :candidate, url: 'immigration/home' do |f| %>

  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>  
  </div>
  <div>
    <%= f.label :middle_name %>
    <%= f.text_field :middle_name %>  
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>  
  </div>
  <div>
    <%= f.label :dob %>
    <%= f.text_field :dob %>  
  </div>
  <div>
    <%= check_box_tag(:spouse) %>
    <%= label_tag(:spouse, "I am applying with my spouse / common-law") %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>