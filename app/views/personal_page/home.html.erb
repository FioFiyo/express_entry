<% if @candidate && @candidate.errors.any? %>
  <div>
    <%= pluralize(@candidate.errors.count, "error") %> prevented this page from being submitted:
    <ul>
      <% @candidate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for :candidate, url: personal_page_submit_path do |f| %>

  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>  
  </div>
  <div>
    <%= f.label :middle_name %>
    <%= f.text_field :middle_name %>  
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>  
  </div>
  <div>
    <%= f.label :dob %>
    <%= f.date_select(:dob, options = {start_year: 1900}) %>  
  </div>
  <div>
    <%= select_tag :countries_id, options_from_collection_for_select(Country.all, "id", "name"), prompt: "Country of residency"%>
  </div>
  <div>
    <%= f.label :occupation %>
    <%= f.text_field :occupation %>
  </div>
    <div>
    <%= f.label :funds %>
    <span>CDN</span> $<%= f.text_field :funds %>
  </div>
  <div>
    <%= check_box_tag(:spouse) %>
    <%= label_tag(:spouse, "I am applying with my spouse / common-law") %>
  </div>
  <div>
    <%= f.label :kids %>
    <%= f.text_field :kids %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>